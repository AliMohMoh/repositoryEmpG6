@model IEnumerable<Role>

@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["Page"] + " " + SharedLocalizer["Roles"];
    var index = 1;
}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">@SharedLocalizer["Roles"]</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group mr-2">
            <a class="btn btn-sm btn-success" asp-action="CreateOrEdit" asp-route-id="0"><i class="bi bi-plus-circle"></i>&nbsp; @SharedLocalizer["Create.New"]</a>
        </div>
    </div>
</div>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th style="width:5%">#</th>
                <th style="width:30%">
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th style="width:50%">
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th style="width:15%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="row_@item.Id">
                    <td>
                        @(index++)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="CreateOrEdit" asp-route-id="@item.Id"
                               class="btn btn-primary btn-sm mx-1"> <i class="bi bi-pencil-square"></i> @SharedLocalizer["Edit"]</a>
                            <button type="button" class="btn btn-sm btn-danger mx-1" onClick=Delete('/Role/Delete/@item.Id','#row_@item.Id')> <i class="bi bi-trash-fill"></i> @SharedLocalizer["Delete"]</button>
                        </div>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>


