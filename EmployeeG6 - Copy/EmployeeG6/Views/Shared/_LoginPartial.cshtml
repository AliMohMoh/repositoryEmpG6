@using Microsoft.AspNetCore.Identity
@using EmployeeG6.Models.ViewModels.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IStringLocalizer<SharedResources> Sh_Localizer


<nav class="navbar navbar-expand-lg navbar-light bg-dark p-0">
    <ul class="navbar-nav">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item active">
                <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@UserManager.GetUserName(User)</a>
            </li>
            <partial name="_SelectLanguagePartial" />
            <li class="nav-item">
                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button id="logout" type="submit" class="nav-link btn btn-link">@Sh_Localizer["Logout"]</button>
                </form>
            </li>
        }
    </ul>
</nav>